# Claude Code Configuration
# Copy this file to .env and fill in your values
# The .env file is automatically loaded by the devcontainer

# Claude Code Authentication (Required)
# Get your OAuth token from: https://docs.anthropic.com/en/docs/claude-code/authentication
CLAUDE_CODE_OAUTH_TOKEN=your_claude_oauth_token_here

# Optional: Other API Keys for MCP servers
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional: Development Settings
CLAUDE_DEBUG=1
MCP_DEBUG=1
PYTHONIOENCODING=UTF-8