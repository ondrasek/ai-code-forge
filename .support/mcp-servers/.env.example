# MCP Server Configuration Environment Variables
# Copy this file to .env in your project root and configure with your actual values

# Required for Perplexity MCP Server
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional Perplexity Configuration
PERPLEXITY_LOG_LEVEL=INFO
PERPLEXITY_DEFAULT_MODEL=sonar
PERPLEXITY_DEFAULT_SYSTEM="Provide detailed, technical responses with citations."

# Optional MCP Global Configuration
MCP_LOG_LEVEL=info
MCP_ENABLE_TELEMETRY=false

# Environment Configuration (affects MCP server behavior)
PROJECT_ENV=development

# Claude Code Configuration
CLAUDE_MODEL=sonnet
CLAUDE_DEBUG=0

# Security Notes:
# - Never commit this file with real API keys
# - Set appropriate file permissions: chmod 600 .env
# - Add .env to your .gitignore file