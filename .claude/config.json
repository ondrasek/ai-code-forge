{
  "projectType": "template",
  "gitStrategy": {
    "commitFrequency": "after-each-change",
    "defaultBranch": "main",
    "workflow": "trunk-based",
    "autoPush": true,
    "commitGuidelines": [
      "Make small, atomic commits",
      "Write clear commit messages",
      "Push immediately after committing",
      "No feature branches unless instructed"
    ]
  },
  "customCommands": {
    "enabled": true,
    "directory": ".claude/commands"
  },
  "prompts": {
    "directory": ".claude/prompts"
  },
  "hooks": {
    "preCommit": ".claude/hooks/pre-commit.sh",
    "postEdit": ".claude/hooks/post-edit.sh"
  },
  "python": {
    "packageManager": "uv",
    "commands": {
      "init": "uv init",
      "install": "uv sync",
      "add": "uv add",
      "remove": "uv remove",
      "run": "uv run",
      "test": "uv run pytest",
      "lint": "uv run ruff check",
      "format": "uv run ruff format"
    },
    "tooling": {
      "linter": "ruff",
      "formatter": "ruff",
      "testing": "pytest"
    }
  },
  "tools": {
    "linting": {
      "python": ["ruff"],
      "javascript": ["eslint", "prettier"],
      "typescript": ["eslint", "prettier"]
    },
    "testing": {
      "python": "uv run pytest",
      "javascript": "npm test",
      "typescript": "npm test"
    }
  },
  "security": {
    "scanForSecrets": true,
    "blockSensitiveFiles": [".env", "*.pem", "*.key"],
    "redactPatterns": [
      "api[_-]?key",
      "password",
      "secret",
      "token"
    ]
  }
}