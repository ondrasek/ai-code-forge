# DevContainer Environment Template
# Copy this file to .env.local and set your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# CRITICAL SECRETS - Required for core functionality
# =============================================================================

# Claude API Key for AI assistance
# Get from: https://console.anthropic.com/settings/keys
CLAUDE_API_KEY=

# GitHub Token for repository access
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=

# =============================================================================
# OPTIONAL SECRETS - For enhanced functionality
# =============================================================================

# Perplexity API Key for research MCP server
# Get from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# =============================================================================
# ENTERPRISE CONFIGURATION - For organizational deployments
# =============================================================================

# Vault integration type (aws-secrets-manager, azure-key-vault, hashicorp-vault)
VAULT_TYPE=

# Vault-specific configuration
VAULT_URL=
VAULT_NAMESPACE=
VAULT_ROLE=

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug logging for secret management
SECRETS_DEBUG=false

# Custom secrets directory (advanced users only)
CUSTOM_SECRETS_DIR=

# =============================================================================
# COMPLIANCE AND AUDIT
# =============================================================================

# Enable comprehensive audit logging
AUDIT_SECRETS=true

# Organization identifier for compliance tracking
ORG_ID=

# Environment designation (development, staging, production)
ENVIRONMENT=development