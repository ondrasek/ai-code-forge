{
  "name": "Claude Code Template",
  "image": "mcr.microsoft.com/devcontainers/python",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22.17.0",
      "nodeGypDependencies": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12",
      "installJupyterlab": false,
      "configureGitCredentialHelper": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "docker.docker",
        "github.codespaces",
        "github.vscode-pull-request-github",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "qwtel.sqlite-viewer"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
        "python.terminal.activateEnvironment": false
      }
    }
  },

  "containerEnv": {
    "CODESPACES": "true",
    "CLAUDE_DEBUG": "1",
    "MCP_DEBUG": "1",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "PYTHONIOENCODING": "UTF-8"
  },

  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/codespace/.local/bin:/root/.cargo/bin",
    "CLAUDE_API_KEY": "${localEnv:CLAUDE_API_KEY}",
    "PERPLEXITY_API_KEY": "${localEnv:PERPLEXITY_API_KEY}",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
    "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}",
    "LANGCHAIN_API_KEY": "${localEnv:LANGCHAIN_API_KEY}",
    "LANGCHAIN_TRACING_V2": "${localEnv:LANGCHAIN_TRACING_V2}",
    "LANGCHAIN_PROJECT": "${localEnv:LANGCHAIN_PROJECT}"
  },

  "forwardPorts": [58023],
  "portsAttributes": {
    "58023": {
      "label": "Claude Code SSE",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": ".devcontainer/setup.sh",

  "mounts": [
    "source=${localWorkspaceFolder}/.devcontainer,target=/tmp/.devcontainer,type=bind,consistency=cached"
  ],

  "updateContentCommand": "echo 'DevContainer ready'",

  "onCreateCommand": {
    "permissions": "chmod +x .devcontainer/setup.sh"
  }
}